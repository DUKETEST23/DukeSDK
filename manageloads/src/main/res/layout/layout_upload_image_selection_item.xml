<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/documents_list_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_115"
    android:layout_marginStart="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginEnd="@dimen/dimen_10"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/document_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_115"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_1"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_rounded_corners" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/image_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/dimen_10"
            android:background="@drawable/non_selected_image_background">

            <TextView
                android:id="@+id/selected_count"
                style="@style/SelectImageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="" />


        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>